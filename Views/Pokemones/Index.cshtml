@model IEnumerable<Pokedex.Models.Pokemon>

@{
    ViewData["Title"] = "Lista de Pokemones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creacion de pokemones</h1>

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Pokemones</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Pokemones">Agregar</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0) { 
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.Id)</td>
                    <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                    <td>@Html.DisplayNameFor(m => m.Primario)</td>
                    <td>@Html.DisplayNameFor(m => m.Secundario)</td>
                    <td>@Html.DisplayNameFor(m => m.Region)</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Primario</td>
                    <td>@item.Secundario</td>
                    <td>@item.Region</td>
                    <td>
                        <a asp-controller="Pokemones" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                        <a asp-controller="Pokemones" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning">Eliminar</a>

                    </td>
                </tr>
                }
            </tbody>
        </table>

        }else{
        <p>No existen registros</p>

        }

    </div>

</div>

